{
  "name": "cvs-svc-test-types",
  "version": "1.0.0",
  "description": "Microservice that stores and serves the test types data",
  "main": "handler.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-test-types.git"
  },
  "scripts": {
    "start": "npm run eslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "start:test": "npm run eslint && SLS_DEBUG=* BRANCH=local node_modules/gulp/bin/gulp.js start-serverless",
    "end:test": "node_modules/gulp/bin/gulp.js kill-serverless",
    "debug": "export SLS_DEBUG=* && BRANCH=local node --inspect ./node_modules/serverless/bin/serverless offline start",
    "test": "node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "BRANCH=local node_modules/.bin/mocha tests/**/*.intTest.js",
    "dynamodb": "sls dynamodb start",
    "prepush": "BRANCH=local npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix  -f json -o report.json",
    "sonar-scanner": "npm run eslint && npm run coverage && sonar-scanner",
    "coverage": "nyc mocha tests/unit/*.unitTest.js && nyc report --reporter=lcov"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.1.0",
    "gulp": "^4.0.0",
    "mocha": "^5.2.0",
    "serverless": "^1.36.1",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^3.27.0",
    "standard": "^12.0.1",
    "supertest": "^3.3.0",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "aws-sdk": "^2.332.0",
    "joi": "^14.3.1",
    "path-parser": "^4.2.0"
  }
}
